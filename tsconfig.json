{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "./custom.d.ts", "types/**/*"],
  "exclude": ["node_modules"]
}
